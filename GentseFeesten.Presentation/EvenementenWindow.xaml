<Window x:Class="GentseFeesten.Presentation.EvenementenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GentseFeesten.Presentation"
        mc:Ignorable="d"
        Title="EvenementenWindow" Height="600" Width="1200">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" MaxWidth="300" MinWidth="100"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Grid.Column="0">Hoofdevenementen</Label>
            <DataGrid x:Name="MainEventGrid" Grid.Column="0" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" SelectedCellsChanged="MainEventGrid_SelectedCellsChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Id}" Visibility="Hidden"></DataGridTextColumn>
                    <DataGridTextColumn Width="*" Header="Naam" Binding="{Binding Naam}" />
                </DataGrid.Columns>
            </DataGrid>
            <Label Grid.Column="2">Details Evenement</Label>
            <Label Grid.Column="1">Tree View</Label>
            <TextBlock x:Name="DescriptionBox" Grid.Column ="2" Grid.Row="2"></TextBlock>
            <TreeView x:Name="EventTreeView" Grid.Column="1" Grid.Row="1"></TreeView>
        </Grid>

        <!--<Grid>
            <DataGrid x:Name="SubEventGrid" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="*" Header="Subevenementen" Binding="{Binding Naam}" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>-->


    </Grid>
</Window>
